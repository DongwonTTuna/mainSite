	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint-staged": "lint-staged --allow-empty",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e && npm run test:unit -- --run",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.4",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-cloudflare": "^5.0.0",
		"@sveltejs/kit": "^2.15.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"eslint-plugin-compat": "^6.0.2",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.19.0",
		"vite": "^6.3.5",
		"vitest": "^3.1.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"@unpic/svelte": "^0.0.58",
		"stylelint": "^16.12.0",
		"stylelint-prettier": "^5.0.2",
		"stylelint-config-standard-scss":"^14.0.0",
		"stylelint-no-unsupported-browser-features": "^8.0.2"
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "^0.11.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"eslint -c .eslintrc.js --fix",
			"prettier --config .prettierrc.js --write --ignore-path .gitignore",
			"stylelint --fix --ignore-path .gitignore --aei"
		]
	},
